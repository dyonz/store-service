{
  "name": "@dyonz/store-service",
  "version": "0.1.0",
  "private": true,
  "description": "Dyonz Store service",
  "homepage": "https://github.com/dyonz/store-service#readme",
  "bugs": "https://github.com/dyonz/store-service/issues",
  "repository": "https://github.com/dyonz/store-service.git",
  "license": "UNLICENSED",
  "author": "AJ Ortiz <ajota.dev@icloud.com>",
  "type": "commonjs",
  "main": "./src/index.js",
  "scripts": {
    "lint": "eslint --ext .js --ext .json --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .js --ext .json --ignore-path .gitignore --fix .",
    "start": "node -r dotenv/config ./src/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --ignore-path .gitignore --fix",
    "*.json": "eslint --ignore-path .gitignore --fix"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "json-format"
    ],
    "extends": [
      "standard",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "no-return-await": "off"
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    }
  },
  "dependencies": {
    "apollo-server": "^2.10.1",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "graphql": "^14.6.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-type-json": "^0.3.1",
    "postgres": "^1.0.2"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1"
  }
}
